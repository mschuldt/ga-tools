\  ( same as 3-node-ram.ga )
node 606 \ test node
/a south /b north
: write ( v a - )
   { write@506 } ! ! ! ;
: read ( a - v )
  { read@506 } ! ! @ ;
: erase ( a n - )
  { erase@506 } ! ! ! ;

: out !b ;
: main
\ write a=a*a, for each address a in ram
191 for
  pop dup push
  dup dup dup + over write
next

\ read and print values
191 for
  pop dup push dup read out
next

node 708
/a west
include 708serial.ga
: main
191 for @ send next exit

